# stremio_catalog_providers_template.j2
---
pgrole: 'stremiocatalogs'
intport: '7000'
image: 'reddravenn/stremio-catalog-providers:latest'
pg_volumes:
  - "{{ settings.storage }}/docker/{{ lookup('env','USER') }}/{{pgrole}}/db:/usr/src/app/db"
  - "{{ settings.storage }}/docker/{{ lookup('env','USER') }}/{{pgrole}}/log:/usr/src/app/log"
pg_env:
  PUID: "{{ lookup('env','MYUID') }}"
  PGID: "{{ lookup('env','MYGID') }}"
  BASE_URL: "https://{{ sub[pgrole][pgrole] if sub_enabled else pgrole }}.{{user.domain}}"
  PORT: "7000"
  DB_USER: "{{ db_user }}"
  DB_HOST: "{{ db_host }}"
  DB_NAME: 'stremio-catalog-db'
  DB_PASSWORD: "{{ db_password }}"
  DB_PORT: '5432'
  DB_MAX_CONNECTIONS: '20'
  DB_IDLE_TIMEOUT: '30000'
  DB_CONNECTION_TIMEOUT: '2000'
  REDIS_HOST: 'redis'
  REDIS_PORT: '6379'
  REDIS_PASSWORD: ''
  TRAKT_CLIENT_ID: "{{ trakt_client_id.user_input }}"
  TRAKT_CLIENT_SECRET: "{{ trakt_client_secret.user_input }}"
  TRAKT_HISTORY_FETCH_INTERVAL: '1d'
  CACHE_CATALOG_CONTENT_DURATION_DAYS: '3'
  CACHE_POSTER_CONTENT_DURATION_DAYS: '7'
  LOG_LEVEL: 'info'
  LOG_INTERVAL_DELETION: '3d'
  NODE_ENV: 'production'
  TZ: 'Europe/Paris'
