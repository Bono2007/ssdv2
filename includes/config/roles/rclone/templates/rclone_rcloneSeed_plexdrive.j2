[Unit]
Description=Google Drive (rclone)
AssertPathIsDirectory=/mnt/rcloneSeed
After=plexdrive.service

[Service]
Type=simple
ExecStart=/usr/bin/rclone mount --config=/root/.config/rclone/rclone.conf --exclude BACKUPS/** --allow-other --gid 1000 --uid 1000 {{rclone.plexdrive}}: /mnt/rcloneSeed
ExecStop=/bin/fusermount -uz /mnt/rcloneSeed
Restart=on-abort

[Install]
WantedBy=default.target