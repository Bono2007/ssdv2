# /etc/systemd/system/crop_sync.service
[Unit]
Description=crop sync
After=network-online.target

[Service]
User={{ lookup('env','MYUID') }}
Group={{ lookup('env','MYGID') }}
Type=exec
ExecStart=/home/{{ lookup('env','USER') }}/scripts/crop/crop sync
ExecStopPost=/bin/rm -rf /home/{{ lookup('env','USER') }}/scripts/crop/crop.lock

[Install]
WantedBy=default.target
