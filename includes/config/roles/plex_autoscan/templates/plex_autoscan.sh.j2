#!/bin/bash
	
SAVEIFS=$IFS
IFS=$(echo -en "\n\b")
FILES=$(find /home/{{ lookup('env','USER') }}/local \( -path /home/{{ lookup('env','USER') }}/local/rutorrent -o -path /home/{{ lookup('env','USER') }}/local/.unionfs-fuse \) -prune -o -name '*.*' -print)

for f in $FILES
do
echo "$f"
curl -d "eventType=Manual&filepath=$f" http://0.0.0.0:3468/{{ plex_autoscan_server_pass | default('') }}
done
					
# restore $IFS
IFS=$SAVEIFS
