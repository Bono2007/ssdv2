# /etc/systemd/system/plex_autoscan.service

[Unit]
Description=Plex Autoscan
After=network-online.target

[Service]
User={{userid.stdout}}
Group={{groupid.stdout}}
Type=simple
WorkingDirectory=/home/{{user.stdout}}/scripts/plex_autoscan/
ExecStart=/home/{{user.stdout}}/scripts/plex_autoscan/scan.py server --loglevel=INFO
Restart=always
RestartSec=10

[Install]
WantedBy=default.target
