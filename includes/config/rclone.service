[Unit]
Description=Google Drive (rclone)
AssertPathIsDirectory=/mnt/rclone
After=plexdrive.service

[Service]
Type=simple
ExecStart=/usr/bin/rclone mount --config=/root/.config/rclone/rclone.conf --allow-other %REMOTEPLEX% /mnt/rclone
ExecStop=/bin/fusermount -uz /mnt/rclone
Restart=on-abort

[Install]
WantedBy=default.target